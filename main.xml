<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http//schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp"
	tools:context="com.mycompany.myapp.MainActivity"
	android:orientation="vertical">
	

	<com.google.android.material.textfield.TextInputLayout
		style="@style/estiloTex"
		android:id="@+id/parentName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/texNombre">
			
		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/EditName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:drawableLeft="@drawable/sonrie">
			
		</com.google.android.material.textfield.TextInputEditText>
		</com.google.android.material.textfield.TextInputLayout>
		
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="2">
	
	<com.google.android.material.textfield.TextInputLayout
		style="@style/estiloTex"
		android:id="@+id/parentPhone"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:errorEnabled="true"
		android:hint="@string/texTelefono">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/EditPhone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/tel">

		</com.google.android.material.textfield.TextInputEditText>
	</com.google.android.material.textfield.TextInputLayout>
	
	
	<com.google.android.material.textfield.TextInputLayout
		style="@style/estiloTex"
		android:id="@+id/parentMail"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:errorEnabled="true"
		android:hint="@string/texEmail">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/EditMail"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/sobre">

		</com.google.android.material.textfield.TextInputEditText>
	</com.google.android.material.textfield.TextInputLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="4">
		<com.google.android.material.textfield.TextInputLayout
			style="@style/estiloTex"
			android:id="@+id/parFechaNac"
			android:layout_below="@+id/parentTel"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			app:errorEnabled="true"
			android:hint="@string/fecha">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/FechaNac"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusableInTouchMode="false"
				android:clickable="true"
				android:drawableLeft="@drawable/baby">

			</com.google.android.material.textfield.TextInputEditText>
		</com.google.android.material.textfield.TextInputLayout>

		<Button
			android:id="@+id/boton"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/texBoton">
		</Button>
    </LinearLayout>
	
	<com.google.android.material.textfield.TextInputLayout
		style="@style/estiloTex"
		android:id="@+id/parentComent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:counterEnabled="true"
		app:counterMaxLenght="30"
		android:hint="@string/coment">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/EditComent"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		</com.google.android.material.textfield.TextInputEditText>
	</com.google.android.material.textfield.TextInputLayout>
	
	
</LinearLayout>
