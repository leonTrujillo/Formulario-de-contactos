	android:gravity="center"
	android:background="@drawable/pergamino">
	
	
	<TextView
		android:id="@+id/datos"
		android:textSize="22dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</TextView>
	
	
	<Button
		android:id="@+id/boton2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
